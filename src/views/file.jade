div(ng-class="{'failed': vm.file.hasErrors}")
  span {{vm.file.name}}
  button(ng-show="vm.file.uploading", ng-click="vm.file.cancel()" type="button") Cancel
  button(ng-show="!vm.file.uploading", ng-click="vm.file.remove()" type="button") Remove
  button(ng-show="vm.file.hasErrors", ng-click="vm.file.retry()" type="button") Retry
  p(ng-show="vm.file.hasErrors") Upload Failed
  progress(ng-show="vm.file.uploading", value="{{vm.file.progress}}", max="100") {{vm.file.progress}}%
